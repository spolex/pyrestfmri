    \n    ], \
    \n    [ \
    \n      "run", \
    \n      "pip3 install nitime nipype matplotlib nibabel nitime numpy dcm2niix scikit-learn pygpu pandas nilearn" \
    \n    ], \
    \n    [ \
    \n      "volume", \
    \n      [ \
    \n        "/home/elekin/datos" \
    \n      ] \
    \n    ], \
    \n    [ \
    \n      "volume", \
    \n      [ \
    \n        "/home/elekin/pyrestfmri" \
    \n      ] \
    \n    ], \
    \n    [ \
    \n      "volume", \
    \n      [ \
    \n        "/home/elekin/results:" \
    \n      ] \
    \n    ] \
    \n  ] \
    \n}' > /neurodocker/neurodocker_specs.json
